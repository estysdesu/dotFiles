{
    // Editor
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 80,
    "editor.wordWrap": "on",
    "editor.trimAutoWhitespace": true,
    "editor.smoothScrolling": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.selectionHighlight": false,
    "editor.mouseWheelZoom": true, // ctrl+scroll
    "editor.formatOnSave": false, // may want to change
    "editor.formatOnPaste": true, // may want to change
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.acceptSuggestionOnEnter": "off", // urks me with `import numpy as np`
    "editor.acceptSuggestionOnCommitCharacter": false,

    // Workbench
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "file-icons",
    "workbench.startupEditor": "none", // "readme"
    "workbench.sideBar.location": "left", // "right"
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.editor": "json",
    "workbench.fontAliasing": "auto",
    "workbench.editor.swipeToNavigate": false, // may want to change
    "workbench.editor.closeOnFileDelete": true, // dirty files never close
    "workbench.statusBar.visible": true,

    // Window
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.restoreWindows": "none",
    "window.newWindowDimensions": "maximized",
    "window.clickThroughInactive": false,

    // Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300000,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true
    },

    // File Explorer
    "explorer.autoReveal": true, // may want to change
    "explorer.confirmDelete": false,
    "explorer.openEditors.visible": 4,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    "workbench.tree.renderIndentGuides": "onHover",

    // Search
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": false,
    "search.useIgnoreFiles": false,

    // Debug
    "debug.openExplorerOnEnd": true,
    "debug.allowBreakpointsEverywhere": true,
    "debug.enableAllHovers": true,
    "debug.inlineValues": true,
    "debug.toolBarLocation": "docked",
    "launch": {
        "configurations": [
            {
                "name": "Python: Main.py",
                "type": "python",
                "request": "launch",
                "program": "${workspaceFolder}/main.py",
                "console": "integratedTerminal"
            },
            {
                "name": "Python: Current File",
                "type": "python",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal"
            },
            {
                "name": "Python: Main.py (verbose)",
                "type": "python",
                "request": "launch",
                "program": "${workspaceFolder}/main.py",
                "args": [
                    "-v"
                ],
                "console": "integratedTerminal"
            }
        ],
        "compounds": []
    },

    // Extensions
    "extensions.closeExtensionDetailsOnViewChange": false,

    // Terminal
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "Alacritty.app",
    "terminal.external.windowsExec": "C:\\Program Files\\Alacritty\\alacritty.exe",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",

    // Breadcrumbs
    "breadcrumbs.enabled": true,
    "window.zoomLevel": 0,

    // Vim
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    
    // Python
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length", "79"
    ]
}
