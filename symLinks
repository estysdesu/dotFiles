#!/usr/bin/env bash

# set symlinks for dotFiles
ln -sf $HOME/dotFiles/.bash_profile $HOME/.bash_profile
ln -sf $HOME/dotFiles/.bashrc $HOME/.bashrc
ln -sf $HOME/dotFiles/.gitignore $HOME/.gitignore
ln -sf $HOME/dotFiles/.vimrc $HOME/.vimrc
ln -sf $HOME/dotFiles/.brewfile $HOME/.brewfile
ln -sfn $HOME/dotFiles/bin $HOME/bin
ln -sf $HOME/dotFiles/.neofetch.conf $HOME/.config/neofetch/config.conf
ln -sf $HOME/dotFiles/.tmux.conf $HOME/.tmux.conf
ln -sf $HOME/dotFiles/.leptonrc $HOME/.leptonrc
ln -sfn $HOME/dotFiles/.vim/myPlugins $HOME/.vim/myPlugins
ln -sf $HOME/dotFiles/.alacritty.yml $HOME/.alacritty.yml
ln -sf $HOME/dotFiles/.gmshrc $HOME/.gmshrc
ln -sf $HOME/dotFiles/.gmsh-options $HOME/.gmsh-options
