# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# move managed window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# focus space with mission-control index #
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2 || (yabai -m space --create && yabai -m space --focus 2)
ctrl - 3 : yabai -m space --focus 3 || (yabai -m space --create && yabai -m space --focus 3)
ctrl - 4 : yabai -m space --focus 4 || (yabai -m space --create && yabai -m space --focus 4)

# send window to space and follow focus
shift + ctrl - 1  : yabai -m window --space 1; yabai -m space --focus 1
shift + ctrl - 2  : yabai -m window --space 2; yabai -m space --focus 2
shift + ctrl - 3  : yabai -m window --space 3; yabai -m space --focus 3
shift + ctrl - 4  : yabai -m window --space 4; yabai -m space --focus 4

# toggle window fullscreen
ctrl - f : yabai -m window --toggle zoom-fullscreen

# rotate tree
ctrl - r : yabai -m space --rotate 90

# float / unfloat window and center on screen
shift + ctrl - f : yabai -m window --toggle float;\
                  yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
ctrl - t : yabai -m window --toggle split

# open terminal
cmd - t : alacritty # -e 'tmux new-session'
#cmd - return : alacritty

# open web
cmd - w : '/Applications/Brave Browser Beta.app/Contents/MacOS/Brave Browser Beta'
shift + cmd - w : '/Applications/Firefox Developer Edition.app/Contents/MacOS/firefox'

#.blacklist [ ]

# focus monitor
# cmd - 1  : yabai -m display --focus 1
# cmd - 2  : yabai -m display --focus 2

